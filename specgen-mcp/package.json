{
  "name": "specgen-mcp",
  "version": "2.2.2",
  "description": "Complete specification management system for Claude Code with MCP integration, commands, and dashboard",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "specgen-mcp": "dist/index.js",
    "specgen-setup": "bin/postinstall-debug.cjs"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "postinstall": "node bin/postinstall-debug.cjs"
  },
  "files": [
    "dist/",
    "claude-code/",
    "specdash/",
    "bin/"
  ],
  "keywords": [
    "claude-code",
    "specification",
    "mcp",
    "model-context-protocol",
    "ai",
    "workflow",
    "dashboard",
    "project-management"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anthropics/agentic-workflows.git"
  },
  "author": "Anthropic",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "chokidar": "^4.0.1",
    "express": "^4.18.0",
    "fs-extra": "^11.0.0",
    "glob": "^11.0.0"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "<rootDir>/.specgen/",
      "<rootDir>/node_modules/"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.ts$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "testTimeout": 10000
  }
}
